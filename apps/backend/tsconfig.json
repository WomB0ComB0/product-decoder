{
	"compilerOptions": {
		"target": "ES2021",
		"module": "ESNEXT",
		"moduleResolution": "node",
		"baseUrl": "./",
		"resolveJsonModule": true,
		"paths": {
			"#/*": ["src/*"],
			"#helpers/*": ["src/helpers/*"],
			"#modules/*": ["src/modules/*"],
			"#decorators/*": ["src/decorators/*"],
			"#plugins/*": ["src/plugins/*"],
			"#middleware/*": ["src/middleware/*"]
		},
		"types": [
			"bun-types"
		],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
